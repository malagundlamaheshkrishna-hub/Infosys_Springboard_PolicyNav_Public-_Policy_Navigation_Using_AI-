# ==========================================
# LOGIN PAGE
# ==========================================
def login_page():
    st.markdown('<div class="neon-title">PolicyNav AI</div>', unsafe_allow_html=True)
    st.markdown('<div class="neon-sub">Secure Entity Interface</div>', unsafe_allow_html=True)

    email = st.text_input("EMAIL")
    password = st.text_input("PASSWORD", type="password")

    if st.button("Sign In", use_container_width=True):
        success, username = authenticate_user(email, password)
        if success:
            st.session_state.user_data = {"sub": email, "username": username}
            st.rerun()
        else:
            st.error("Authentication Refused")

    col1, col2 = st.columns(2)
    if col1.button("Create Account", use_container_width=True):
        st.session_state.page = "signup"
        st.rerun()
    if col2.button("Forget password", use_container_width=True):
        st.session_state.page = "forgot"
        st.rerun()

# ==========================================
# SIGNUP (NO OTP)
# ==========================================
def signup_page():
    st.markdown('<div class="neon-title">Registration</div>', unsafe_allow_html=True)

    name = st.text_input("Full Name")
    email = st.text_input("Email")
    p1 = st.text_input("Create Password", type="password")
    p2 = st.text_input("Confirm Password", type="password")
    s_quest = st.selectbox("Security Question",
                           ["Name of first pet?", "Mother's maiden name?", "City of birth?"])
    s_ans = st.text_input("Answer")

    if st.button("Create Account", use_container_width=True):
        if not all([name, email, p1, p2, s_ans]):
            st.error("Please fill all fields.")
        elif p1 != p2:
            st.error("Passwords do not match.")
        elif check_user_exists(email):
            st.error("User already exists.")
        else:
            if register_user(email, p1, name, s_quest, s_ans):
                st.success("Account Created Successfully!")
                time.sleep(1)
                st.session_state.page = "login"
                st.rerun()

    if st.button("Back", use_container_width=True):
        st.session_state.page = "login"
        st.rerun()

# ==========================================
# FORGOT PASSWORD (SECURITY QUESTION ONLY)
# ==========================================
def forgot_page():
    st.markdown('<div class="neon-title">Reset Access</div>', unsafe_allow_html=True)

    if st.session_state.reset_step == 1:
        email = st.text_input("Registered Email")
        if st.button("Continue", use_container_width=True):
            if check_user_exists(email):
                st.session_state.reset_email = email
                st.session_state.reset_step = 2
                st.rerun()
            else:
                st.error("Account not found.")

    elif st.session_state.reset_step == 2:
        user = get_user_data(st.session_state.reset_email)
        st.info(f"Security Question: {user['security_question']}")
        ans = st.text_input("Security Answer")
        if st.button("Verify", use_container_width=True):
            if ans.lower().strip() == user["security_answer"]:
                st.session_state.reset_step = 3
                st.rerun()
            else:
                st.error("Wrong Answer.")

    elif st.session_state.reset_step == 3:
        p1 = st.text_input("New Password", type="password")
        p2 = st.text_input("Confirm New Password", type="password")
        if st.button("Update", use_container_width=True):
            if p1 == p2:
                update_password(st.session_state.reset_email, p1)
                st.success("Password Updated!")
                time.sleep(1)
                st.session_state.page = "login"
                st.session_state.reset_step = 1
                st.rerun()
            else:
                st.error("Passwords do not match.")

# ==========================================
# CHAT DASHBOARD
# ==========================================
def chat_page(username):
    st.markdown(f'<div class="neon-title">Welcome, {username}</div>', unsafe_allow_html=True)
    st.markdown('<div class="neon-sub">Secure AI Interface</div>', unsafe_allow_html=True)

    if "messages" not in st.session_state:
        st.session_state.messages = []

    for msg in st.session_state.messages:
        with st.chat_message(msg["role"]):
            st.markdown(msg["content"])

    if prompt := st.chat_input("Ask anything..."):
        st.session_state.messages.append({"role": "user", "content": prompt})
        with st.chat_message("assistant"):
            response = f"Secure Mock Response to: {prompt}"
            st.markdown(response)
        st.session_state.messages.append({"role": "assistant", "content": response})

    if st.button("Logout", use_container_width=True):
        st.session_state.user_data = None
        st.rerun()

# ==========================================
# ROUTING
# ==========================================
if st.session_state.user_data:
    chat_page(st.session_state.user_data["username"])
else:
    if st.session_state.page == "signup":
        signup_page()
    elif st.session_state.page == "forgot":
        forgot_page()
    else:
        login_page()
