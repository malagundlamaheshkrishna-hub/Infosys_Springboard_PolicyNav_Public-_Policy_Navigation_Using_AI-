import streamlit as st
import sqlite3
import bcrypt
import datetime
import time

# ==========================================
# CONFIG
# ==========================================
DB_NAME = "users.db"

# ==========================================
# DATABASE
# ==========================================
def init_db():
    conn = sqlite3.connect(DB_NAME)
    c = conn.cursor()
    c.execute('''CREATE TABLE IF NOT EXISTS users
                 (email TEXT PRIMARY KEY,
                  password BLOB,
                  username TEXT,
                  security_question TEXT,
                  security_answer TEXT,
                  created_at TEXT)''')
    conn.commit()
    conn.close()

def _get_timestamp():
    return datetime.datetime.utcnow().strftime("%Y-%m-%d %H:%M:%S")

def register_user(email, password, username, security_question, security_answer):
    conn = sqlite3.connect(DB_NAME)
    c = conn.cursor()
    try:
        hashed = bcrypt.hashpw(password.encode(), bcrypt.gensalt())
        c.execute("""INSERT INTO users VALUES (?, ?, ?, ?, ?, ?)""",
                  (email, hashed, username, security_question,
                   security_answer.lower().strip(), _get_timestamp()))
        conn.commit()
        return True
    except sqlite3.IntegrityError:
        return False
    finally:
        conn.close()

def authenticate_user(email, password):
    conn = sqlite3.connect(DB_NAME)
    c = conn.cursor()
    c.execute("SELECT password, username FROM users WHERE email = ?", (email,))
    data = c.fetchone()
    conn.close()
    if data and bcrypt.checkpw(password.encode(), data[0]):
        return True, data[1]
    return False, None

def check_user_exists(email):
    conn = sqlite3.connect(DB_NAME)
    c = conn.cursor()
    c.execute("SELECT 1 FROM users WHERE email=?", (email,))
    exists = c.fetchone()
    conn.close()
    return exists is not None

def get_user_data(email):
    conn = sqlite3.connect(DB_NAME)
    c = conn.cursor()
    c.execute("SELECT username, security_question, security_answer FROM users WHERE email=?", (email,))
    data = c.fetchone()
    conn.close()
    if data:
        return {"username": data[0], "security_question": data[1], "security_answer": data[2]}
    return None

def update_password(email, new_password):
    conn = sqlite3.connect(DB_NAME)
    c = conn.cursor()
    hashed = bcrypt.hashpw(new_password.encode(), bcrypt.gensalt())
    c.execute("UPDATE users SET password=? WHERE email=?", (hashed, email))
    conn.commit()
    conn.close()

# ==========================================
# INITIALIZE
# ==========================================
@st.cache_resource
def initialize():
    init_db()
initialize()

# ==========================================
# SESSION STATE
# ==========================================
if "user_data" not in st.session_state: st.session_state.user_data = None
if "page" not in st.session_state: st.session_state.page = "login"
if "reset_step" not in st.session_state: st.session_state.reset_step = 1

# ==========================================
# UI THEME
# ==========================================
st.set_page_config(page_title="PolicyNav | Portal", layout="wide")

st.markdown("""
